{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,
    "strict": true,           
    "skipLibCheck": true
  },
  "include": ["src/**/*" ],
  "exclude": ["node_modules",  "**/*.spec.ts"]
}
